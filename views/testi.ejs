<body>
    <!-- header start from here -->
    <%- include('../partials/header.ejs');%>
    <!-- header end here -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center pt-3">Testinorminals</h2>
                    <form action="/testiupload" method="post" enctype="multipart/form-data" onsubmit="return validateTesti()">
                        <label for="" class="form-label">Quotes</label>
                        <textarea name="quotes" id="quote" cols="" rows="" minLength="10" maxLength="40" class="form-control"></textarea>
                        <p id="quoteError" class="text-danger"></p>
                        <label for="" class="form-label">Company Name</label>
                        <input type="text" name="companyname" id="" class="form-control">
                        <label for="" class="form-label">Testinorminal's Image</label>
                        <input type="file" name="img" id="" class="form-control">
                        <button type="submit" class="form-control btn btn-success mt-2 mb-2">Upload</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Footer start here -->
    <%- include('../partials/footer.ejs');%>
    <!-- Footer end here -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>



