<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Header and Footer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Tamma+2&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="style2.css">
</head>

<body>
    <!-- header start from here -->
    <%- include('../partials/header.ejs');%>
    <!-- header end here -->
    <!-- banner title start here -->
    <section id="banner">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h2><%= bannerRecord.title%></h2>
                    <p><%= bannerRecord.desc%></p>
                    <a href="/banner"><button class="btn btn-info">See More Details...</button></a>
                </div>
                <div class="col-md-4"><img id="img1" src="../upload/<%= bannerRecord.img%>"  class="img-fluid mx-auto d-block" alt=""></div>
            </div>
        </div>

    </section>
    <!-- banner title end here -->
    <!-- testi start here -->
    <section id="testi">
        <div class="container">
            <div class="row text-center">
                <h4>what customer want to us</h4>
                <%testirecord.forEach((result)=>{%>
                <div class="col-md-2">
                    <img style="width: 100px; height: 100px;"src="/upload/<%=result.img%>" alt="error:not upload">
                    <p><i class="bi bi-quote"></i><%=result.quotes%><i class="bi bi-quote"></i></p>
                    <p><%=result.companyname%></p>
                </div>
            <%})%>
            </div>
        </div>
    </section>
    <!-- testi end here -->
    <!-- Footer start here -->
    <%- include('../partials/footer.ejs');%>
    <!-- Footer end here -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>