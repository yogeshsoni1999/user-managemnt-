<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Query Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/style.css">
</head>
<body>
    <%-include('../../partials/admin/header.ejs');%>

    <section id="left">
        <div class="container">
            <div class="row">
                <%-include('../../partials/admin/left.ejs');%>
                <div class="col-md-9">
                    <h2 class="text-primary text-center">Contact Detail Page</h2>
                    <form action="/admin/contactsearch" method="post" class="form-control mb-3 text-center">
                        
                        <select name="search" id="" class="form-select">
                            <option value="read">read</option>
                            <option value="unread">unread</option>
                        </select>
                        <button type="submit" class="btn btn-success mt-2 form-control">Search</button>
                    </form>
                    <table class="table table-bordered border-primary mt-1">
                        <div class="text-danger"><%=message%></div>

                        <tr>
                            <th>S.No</th>
                            <th>Email</th>
                            <th>Query</th>
                            <th>Status</th>
                            <th>Action</th>
                            <th>Email</th>
                        </tr>
                        <% contactrecord.forEach((result,key)=>{%>

                        <tr>
                            <td><%=key+1%></td>
                            <td><%=result.email%></td>
                            <td><%=result.query%></td>
                            <td><a href="/admin/contactstatusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                            <td><a href="/admin/deletequery/<%=result.id%>"><i class="bi bi-trash text-center"></i></a></td>
                            <td><a href="/admin/emailsend/<%=result.id%>"><i class="bi bi-envelope"></i></a></td>
                        </tr>
                    <%})%>
                    <%if(contactrecord.length=='0'){%>
                    <tr>
                        <td colspan="5" class="text-center text-primary">No Record Found</td>
                    </tr>
                    <%}%>
                    </table>
                </div>
            </div>
        </div>
    </section>
   

   

   <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>